#include <stdio.h>

int main() {
    int n, frames, i, j, k;
    
    printf("Enter the number of pages: ");
    scanf("%d", &n);
    int pages[n];
    printf("Enter the page reference string: ");
    for (i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &frames);
    int frame[frames];

    // Initialize frames
    for (i = 0; i < frames; i++)
        frame[i] = -1;

    int page_faults = 0, index = 0;

    printf("\nPage\tFrames\n");
    for (i = 0; i < n; i++) {
        int found = 0;

        // Check if page is already in frame
        for (j = 0; j < frames; j++) {
            if (frame[j] == pages[i]) {
                found = 1;
                break;
            }
        }

        // If not found, replace using FIFO
        if (!found) {
            frame[index] = pages[i];
            index = (index + 1) % frames;
            page_faults++;
        }

        // Print current frames
        printf("%d\t", pages[i]);
        for (k = 0; k < frames; k++) {
            if (frame[k] != -1)
                printf("%d ", frame[k]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults: %d\n", page_faults);

    return 0;
}
